{
  "manifest_version": 3,
  "name": "Academia Education Auto Bulk Downloader",
  "description": "Bulk download automatically papers that researchers, professors, and students",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.academia.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.academia.edu/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icons/icon32.png",
    "default_popup": "popup/popup.html"
  }
}